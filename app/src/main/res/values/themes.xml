<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wrappedify" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/spotify_green</item>
        <item name="materialButtonStyle">@style/Widget.Wrappedify.Button</item>
        <item name="android:textColor">@color/spotify_black</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/circular</item>

    </style>

    <style name="Widget.Wrappedify.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/spotify_green</item>
        <item name="android:textColor">@color/spotify_black</item>
    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="privateAccountSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
<!--    <style name="Theme.Wrappedify" parent="Base.Theme.Wrappedify" />-->
  
</resources>